{
  "name": "milesync",
  "version": "1.0.0",
  "description": "A gig driver mileage reconciliation platform",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd src && next dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "echo 'Backend build complete'",
    "build:frontend": "cd src && next build",
    "start": "node backend/server.js",
    "test": "jest",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js"
  },
  "keywords": [
    "mileage",
    "tracking",
    "sync",
    "gig-driver",
    "pdf-processing",
    "reconciliation"
  ],
  "author": "James Knight",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesknight/MileSync.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^2.1.4",
    "tesseract.js": "^5.0.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
